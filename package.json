{
  "name": "@web/storybook-prebuilt",
  "version": "0.0.5",
  "publishConfig": {
    "access": "public"
  },
  "description": "A prebuilt storybook version for web components",
  "author": "open-wc",
  "license": "MIT",
  "main": "index.js",
  "module": "index.js",
  "scripts": {
    "start:wc": "wds --node-resolve --app-index demo/wc/index.html --open",
    "start:preact": "wds --node-resolve --app-index demo/preact/index.html --open",
    "build": "rm -rf dist && NODE_ENV=production node --max-old-space-size=16384 node_modules/.bin/rollup -c rollup/rollup.config.js",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "release": "standard-version && git push --follow-tags origin master && npm publish",
    "release:dry-run": "standard-version --dry-run"
  },
  "files": [
    "dist",
    "*.js",
    "*.js.map",
    "addon-*",
    "theming"
  ],
  "devDependencies": {
    "@babel/preset-env": "7.12.1",
    "@rollup/plugin-alias": "3.1.1",
    "@rollup/plugin-commonjs": "16.0.0",
    "@rollup/plugin-inject": "4.0.2",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "9.0.0",
    "@rollup/plugin-replace": "2.3.4",
    "@storybook/addon-a11y": "6.0.28",
    "@storybook/addon-actions": "6.0.28",
    "@storybook/addon-backgrounds": "6.0.28",
    "@storybook/addon-console": "1.2.2",
    "@storybook/addon-controls": "6.0.28",
    "@storybook/addon-docs": "6.0.28",
    "@storybook/addon-essentials": "6.0.28",
    "@storybook/addon-knobs": "6.0.28",
    "@storybook/addon-links": "6.0.28",
    "@storybook/addon-storysource": "6.0.28",
    "@storybook/addon-toolbars": "6.0.28",
    "@storybook/addon-viewport": "6.0.28",
    "@storybook/addons": "6.0.28",
    "@storybook/node-logger": "6.0.28",
    "@storybook/preact": "6.0.28",
    "@storybook/theming": "6.0.28",
    "@storybook/web-components": "6.0.28",
    "@web/dev-server": "0.0.15",
    "babel-loader": "8.1.0",
    "cjs-module-lexer": "0.5.0",
    "deepmerge": "4.2.2",
    "eslint": "7.12.1",
    "htm": "3.0.4",
    "husky": "1.3.1",
    "lint-staged": "10.5.0",
    "lit-element": "2.4.0",
    "magic-string": "0.25.7",
    "preact": "10.5.5",
    "lit-html": "1.3.0",
    "rollup": "2.32.1",
    "rollup-plugin-babel": "5.0.0-alpha.2",
    "rollup-plugin-node-builtins": "2.1.2",
    "rollup-plugin-node-globals": "1.4.0",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-visualizer": "4.1.2",
    "standard-version": "9.0.0"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "rules": {
      "import/no-extraneous-dependencies": "off"
    }
  },
  "prettier": "@open-wc/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
